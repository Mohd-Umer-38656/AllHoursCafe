<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AllHoursCafe Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="~/css/admin-navbar.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Gabriela&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/auto-logout.css?v=@DateTime.Now.Ticks" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid px-4">
                <a class="navbar-brand" href="/Admin">
                    <img src="/images/logo.png" alt="AllHoursCafe Logo" height="50" class="d-inline-block align-top mr-2">
                    <span>Admin</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav-container d-flex align-items-center justify-content-between w-100">
                        <ul class="navbar-nav d-flex flex-row align-items-center">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-tachometer-alt nav-icon"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="menuDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-utensils nav-icon"></i> Menu
                                </a>
                                <div class="dropdown-menu" aria-labelledby="menuDropdown">
                                    <div class="dropdown-header">Menu Options</div>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="MenuItems">
                                        <i class="fas fa-hamburger"></i> Menu Items
                                    </a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Categories">
                                        <i class="fas fa-th-list"></i> Categories
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="EnhancedCreateMenuItem">
                                        <i class="fas fa-plus-circle"></i> Add New Item
                                    </a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="CreateCategory">
                                        <i class="fas fa-folder-plus"></i> Add New Category
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Orders">
                                    <i class="fas fa-shopping-bag nav-icon"></i> Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Reservations">
                                    <i class="fas fa-calendar-alt nav-icon"></i> Reservations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Contacts">
                                    <i class="fas fa-envelope nav-icon"></i> Messages
                                    @if (ViewBag.UnreadContactsCount > 0)
                                    {
                                        <span class="badge badge-pill badge-primary nav-badge">@ViewBag.UnreadContactsCount</span>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                    <i class="fas fa-users nav-icon"></i> Users
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav d-flex flex-row align-items-center">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home nav-icon"></i> Back
                                </a>
                            </li>
                            <li class="nav-item ml-2">
                                <form asp-controller="Auth" asp-action="Logout" method="post" id="adminLogoutForm" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link">
                                        <i class="fas fa-sign-out-alt nav-icon"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container admin-container">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <img src="/images/logo.png" alt="AllHoursCafe Logo" height="40">
                    <p>&copy; @DateTime.Now.Year - AllHoursCafe Admin Panel</p>
                </div>
                <div class="footer-links">
                    <a href="/Home/Index">Back to Website</a>
                    <a href="/Admin">Dashboard</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js"></script>
    <script src="~/js/image-handler.js"></script>
    <script src="~/js/logout.js"></script>
    <script src="~/js/admin-animations.js"></script>
    <script src="~/js/admin-navbar.js"></script>
    <script src="~/js/auto-logout.js"></script>
    <script src="~/js/image-fallback.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
